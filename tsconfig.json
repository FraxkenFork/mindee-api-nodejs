{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
        "@mindee/*": ["mindee/*"],
        "@api/*": ["mindee/api/*"],
        "@documents/*": ["mindee/documents/*"],
        "@fields/*": ["mindee/documents/fields/*"],
        "@errors/*": ["mindee/errors/*"],
        "#apiPaths": ["tests/data/api/api_paths.json"]
      }
  },
  "include": ["mindee", "tests"],
  "exclude": ["./node_modules/", "./dist/"]
}
