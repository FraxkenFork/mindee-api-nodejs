{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "commonJS",
    "baseUrl": ".",
    "paths": {
        "@mindee/*": ["mindee/*"],
        "@api/*": ["mindee/api/*"],
        "@documents/*": ["mindee/documents/*"],
        "@fields/*": ["mindee/documents/fields/*"],
        "@errors/*": ["mindee/errors/*"]
      }
  },
  "include": ["mindee"],
  "exclude": ["./node_modules/", "./tests/", "./dist/"]
}
